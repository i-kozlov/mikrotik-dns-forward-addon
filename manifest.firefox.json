{
  "manifest_version": 2,
  "name": "MikroTik DNS Forward",
  "version": "1.2.0",
  "description": "Quickly add DNS forward rules to MikroTik router from current browser tab",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "mikrotik-dns-forward@extension",
      "strict_min_version": "78.0"
    }
  }
}
